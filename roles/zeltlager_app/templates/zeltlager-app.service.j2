[Unit]
Description=The server for the zeltlager app
After=network.target
After=local-fs.target

[Service]
User=zeltlager_app
Group=users
WorkingDirectory=/home/zeltlager_app/Lager
ExecStart=/usr/bin/env mono /home/zeltlager_app/Zeltlager/Zeltlager/Zeltlager.Server/bin/Release/Zeltlager.Server.exe
Restart=on-failure
RestartSec=1
StartLimitInterval=10
StartLimitBurst=3

[Install]
WantedBy=multi-user.target
